<h2>生徒登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "students/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :名前（カナ） %><br />
    <%= f.text_field :name_kana, autocomplete: "name_kana" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number,autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :生年月日 %><br />
    <%= f.date_field :birth, autocomplete: "birth" %>
  </div>

  <div class="field">
    <%= f.label :保護者氏名 %><br />
    <%= f.text_field :parent_name, autocomplete: "parent_name" %>
  </div>

  <div class="field">
    <%= f.label :保護者氏名（カナ） %><br />
    <%= f.text_field :parent_name_kana, autocomplete: "parent_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %> 文字以上）</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "students/shared/links" %>
