<%= render "admins/shared/header" %>
<% week = ["日", "月", "火", "水", "木", "金", "土"] %>
<p id="notice"><%= notice %></p>

<div class="text-center mt-3">
  <h1 class="text-center undertitle">生徒一覧</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>id</th>
            <th>名前</th>
            <th>学年</th>
            <th>学校名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
          <tr>
            <td><%= student.id %></td>
            <td><%= student.name %></td>
            <td><%= student.birth %></td>
            <td><%= student.school %></td>
            <td><%= link_to "詳細", admin_student_path(student) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>