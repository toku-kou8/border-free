<%= render "admins/shared/header" %>
<% week = ["日", "月", "火", "水", "木", "金", "土"] %>
<p id="notice"><%= notice %></p>

<div class="text-center mt-3">
  <h1 class="text-center undertitle">講師一覧</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>id</th>
            <th>名前</th>
            <th>学年</th>
            <th>大学</th>
            <th>担当科目</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.id %></td>
            <td><%= teacher.name %></td>
            <td><%= teacher.birth %></td>
            <td><%= teacher.school %></td>
            <td>
              <% teacher.subjects.each do |subject| %>
              <%= subject.name_grade %>
              <% end %><br>
            </td>
            <td><%= link_to "詳細", admin_teacher_path(teacher) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>