<%= render "layouts/header" %>
<div class="container">
  <div class="text-center mt-5">
    <h1 class="text-center undertitle">問い合わせフォーム</h1>
  </div>
  <%= form_with(model: @contact, local: true) do |f| %>
    <div class="col-md-6 offset-md-3 my-5">
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <ul><% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="correct-msg-main">
        <div class="contact-form">
          <div class="correct-text-field">
            <%= f.label "お問い合わせ件名",class: "h5" %><br>
            <% if params[:classes] %>
              <%= f.hidden_field :title, :value => params[:classes] %>
              <%= params[:classes] %>
            <% else %>
              <%= f.text_field :title, placeholder: "お問い合わせ件名", class: "input-form" %>
            <% end %>
          </div>
          <div class="correct-text-field">
            <%= f.label "お名前",class: "h5" %><br>
            <%= f.text_field :name, placeholder: "例）山田太郎", class: "input-form" %>
          </div>
          <div class="correct-text-field">
            <%= f.label "フリガナ",class: "h5" %><br>
            <%= f.text_field :name_kana, placeholder: "例）ヤマダタロウ", class: "input-form" %>
          </div>
          <div class="correct-text-field">
            <%= f.label "メールアドレス",class: "h5" %><br>
            <%= f.email_field :email, placeholder: "例）sample@borderfree.com", class: "input-form" %>
          </div>
          <div class="correct-text-field">
            <%= f.label "電話番号",class: "h5" %><br>
            <%= f.text_field :phone, placeholder: "例）09012345678", class: "input-form" %>
          </div>
          <div class="correct-text-field">
            <%= f.label "お問合せ内容",class: "h5" %><br>
            <%= f.text_area :content, placeholder: "お問合せ内容を入力してください", size: '80x5', class: "input-form" %>
          </div>
          <div class="d-flex">
            <div class="register-btn mx-4">
              <%= f.submit "送信", class: "btn btn-success" %>
            </div>
            <div class="register-btn">
              <%= link_to "もどる", root_path, class: "btn btn-info" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>